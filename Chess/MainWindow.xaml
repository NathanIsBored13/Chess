<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Style="{StaticResource Parent_Style}"
        Title="MainWindow"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize">
    <StackPanel Orientation="Horizontal">
        <Border Margin="10" Padding="1">
            <UniformGrid x:Name="DrawTarget" Rows="8" Columns="8"/>
        </Border>
        <Border Margin="0, 10, 10, 10" Padding="10">
                <StackPanel Orientation="Vertical">
                    <Label Content="Chess Coursework" FontSize="20" FontWeight="ExtraBold" HorizontalAlignment="Center"/>
                    <Label Content="By Nathaniel Smith" FontSize="18" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
    </StackPanel>
</Window>